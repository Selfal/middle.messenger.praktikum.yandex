    "sass": "^1.34.1",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "pages": "^0.0.16",
    "pug": "^3.0.2",
    "static": "^2.0.0"
